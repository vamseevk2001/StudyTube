        <item name="colorPrimary">@color/red_yt</item>
        <item name="colorPrimaryVariant">#FFAA0400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1E88E5</item>
